
#ifndef _CLIENT_H_
# define _CLIENT_H_

#include <sys/types.h>
#include <sys/socket.h>
#include <netdb.h>
#include <netinet/in.h>
#include <arpa/inet.h>
#include <unistd.h>
#include <string.h>
#include <stdlib.h>
#include <stdio.h>
#include <assert.h>

typedef struct		s_client
{
  int			socket_fd;
  int			port;
  char			*server_ip;
  struct sockaddr_in    s_in;
}			t_client;

typedef struct		s_match_fptr
{
  char			*str;
  int       (*funcptr)(t_client *client, char **command);
}			t_match_fptr;

int		init_client(int ac, char **av, t_client *client);
int		loop(t_client *client);
char		**add_word(char **command, char *str);
int		execute(t_client * client, char **command);


#endif	/* !_CLIENT_H_ */
